<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLD WEATHER MAINTENANCE"
        android:id="@+id/cold_weather_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WINTER HIGHWAY MAINTENANCE IN NORTHERN ARIZONA"
        android:id="@+id/winter_highway_btn"
        android:layout_below="@+id/cold_weather_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAVEMENT FOUNDATION QUALITY ASSURANCE OPPORTUNITIES"
        android:id="@+id/foundation_quality_btn"
        android:layout_below="@+id/winter_highway_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CITY OF FLAGSTAFF: CITY PERSPECTIVE ON COLD WEATHER MAINTENANCE"
        android:id="@+id/city_flagstaff_btn"
        android:layout_below="@+id/foundation_quality_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
